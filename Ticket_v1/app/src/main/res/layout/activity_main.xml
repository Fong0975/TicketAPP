<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_movie_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="36dp"
        android:onClick="click_bt"
        android:text="票1"
        app:layout_constraintBottom_toTopOf="@+id/bt_movie_3"
        app:layout_constraintEnd_toStartOf="@+id/bt_movie_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_movie_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginBottom="36dp"
        android:onClick="click_bt"
        android:text="票2"
        app:layout_constraintBottom_toTopOf="@+id/bt_movie_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_movie_1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_movie_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="43dp"
        android:onClick="click_bt"
        android:text="票3"
        app:layout_constraintBottom_toTopOf="@+id/bt_movie_5"
        app:layout_constraintEnd_toStartOf="@+id/bt_movie_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_movie_1" />

    <Button
        android:id="@+id/bt_movie_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginBottom="47dp"
        android:onClick="click_bt"
        android:text="票4"
        app:layout_constraintBottom_toTopOf="@+id/bt_movie_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_movie_3"
        app:layout_constraintTop_toBottomOf="@+id/bt_movie_2" />

    <Button
        android:id="@+id/bt_movie_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="176dp"
        android:onClick="click_bt"
        android:text="票5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_movie_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_movie_3"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/bt_movie_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="176dp"
        android:onClick="click_bt"
        android:text="票6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_movie_5"
        app:layout_constraintTop_toBottomOf="@+id/bt_movie_4" />

</android.support.constraint.ConstraintLayout>